---
import {Button,Badge, Avatar} from '@nextui-org/react';
import Default from '@layouts/Default.astro';
import CustomCard from '@components/CustomCard.jsx';
import CustomBlurredCard from '@components/CustomBlurredCard.jsx';
import CustomDropDown from '@components/CustomDropDown.jsx';
import CustomModal from '@components/CustomModal.jsx';
---

<Default title="Home Page">
	<h1 class="text-red-600">Astro</h1>
	<div class="flex flex-wrap gap-4 items-center">
		<Button color="default" variant="solid" client:only>
			Solid
		</Button>
		<Button color="primary" variant="faded" client:only>
			Faded
		</Button>
		<Button color="secondary" variant="bordered" client:only>
			Bordered
		</Button>
		<Button color="success" variant="light" client:only>
			Light
		</Button>
		<Button color="warning" variant="flat" client:only>
			Flat
		</Button>
		<Button color="danger" variant="ghost" client:only>
			Ghost
		</Button>
		<Button color="primary" variant="shadow" client:only>
			Shadow
		</Button>
	</div>
	<div class="pt-4">
		<Badge content="5" color="primary" client:only>
			<Avatar
			  radius="md"
			  size="lg"
			  src="https://i.pravatar.cc/300?u=a042581f4e29026709d"
			  client:only
			/>
		  </Badge>
	</div>
	<div class="mt-4 flex h-full w-full not-prose justify-start items-center">
		<CustomCard client:only/>
	</div>
	<div class="mt-4 flex h-full w-full not-prose justify-start items-center">
		<CustomBlurredCard client:only/>
	</div>
  <div class="mt-4">
    <CustomDropDown client:only/>
  </div>
  <div class="mt-4">
    <CustomModal client:only/>
  </div>
</Default>